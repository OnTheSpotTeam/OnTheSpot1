<?xml version="1.0" encoding="utf-8"?>
<!-- Notice the "/lib" in package reference! It saved my day! -->
<com.mobeta.android.dslv.DragSortListView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res/com.swat.onthespot"
    android:id="@android:id/list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="3dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="10dp"
    android:padding="3dp"
    dslv:collapsed_height="2dp"
    dslv:drag_enabled="true"
    dslv:drag_scroll_start="0.33"
    dslv:float_alpha="0.6"
    dslv:max_drag_scroll_speed="0.5"
    dslv:slide_shuffle_speed="0.3"
    dslv:track_drag_sort="false"
    dslv:use_default_controller="false" />
