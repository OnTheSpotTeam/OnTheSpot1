<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itinlist_totalheight"
    android:paddingBottom="@dimen/itinlist_allpadbottom"
    android:paddingTop="@dimen/itinlist_allpadtop">

    <LinearLayout
        android:layout_width="@dimen/itinlist_textwidth"
        android:layout_height="@dimen/itinlist_textheight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/itinlist_textpadleft"
        android:orientation="vertical" >

        <TextView android:id="@+id/itinlist_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:textSize="@dimen/itinlist_name_size"
            android:typeface="serif" />
        
        <TextView
            android:id="@+id/itinlist_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="0"
            android:textSize="@dimen/itinlist_date_size"
            android:typeface="sans" />

        <TextView
            android:id="@+id/itinlist_item_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:textSize="@dimen/itinlist_comment_size"
            android:typeface="sans" />

    </LinearLayout>

    <ImageView
        android:id="@+id/itinlist_item_image"
        android:layout_width="@dimen/itinlist_imagewidth"
        android:layout_height="@dimen/itinlist_imageheight"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/itinlist_imagepadleft"
        android:paddingRight="@dimen/itinlist_imagepadright" />

</RelativeLayout>

